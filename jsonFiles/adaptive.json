{
  "functions":{
    "ContinuousAdaptivity": {
      "description": "Module used to implement the infinite continuous SPH paper.",
      "folder": "adaptivity",
      "name": "adaptive",
      "units": true,
      "cell_info": true,
      "neighbor_info": true,
      "inlet": true,
      "virtual_info": true,
      "boundaryInfo": true,
      "depends_all": [
        { "modules::adaptive": true }
      ],
      "functions": [ "adapt", "blendDensity", "blendVelocity" ],
      "parameters": [ "boundaryDampening", "boundaryCounter", "ptcl_spacing", "xsph_viscosity", "ratio", "surface_levelLimit", "simulationTime", "surface_neighborLimit", "surface_phiMin", "surface_phiChange", "surface_distanceFieldDistances", "volumeBoundaryCounter", "boundaryCounter", "resolution", "delay", "blendSteps", "useVolume", "adaptivityScaling", "adaptivityGamma", "adaptivityThreshold" ],
      "input": [ "boundaryPlanes" ],
      "swap": [ "distanceBuffer", "parentIndex", "parentPosition", "position", "volume" ],
      "output": [ "velocity", "lifetime", "density", "splitIndicator", "parentVolume" ],
      "temporary": [ "adaptive::classification", "mergeCounter", "markerBuffer", "changeBuffer", "mergeable", "ptclCounter", "particleIndex", "particleIndexCompact", "adaptivityCounter" ]
    }
  },
  "arrays":{
    "adaptive": {
      "mergeable": {
        "description": "Indiciates the merge-ability or share-ability of a particle.",
        "unit": "none",
        "type": "int32_t",
        "kind": "particleData",
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "mergeCounter": {
        "description": "Indiciates the number of merging/sharing partners.",
        "unit": "none",
        "type": "int32_t",
        "kind": "particleData",
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "ptclCounter": {
        "description": "Used as an atomic counter to increment the number of particles.",
        "unit": "none",
        "type": "int32_t",
        "kind": "particleData",
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "classification": {
        "description": "Contains the classification of every particle according to a decision function.",
        "unit": "none",
        "type": "float",
        "kind": "particleData",
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "splitIndicator": {
        "description": "Contains an indicator that is incremented over time or reset depending on the classification of a particle as L over time.",
        "type": "int32_t",
        "kind": "particleData",
        "unit": "none",
        "size": 1,
        "swap": true,
        "resort": true,
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "adaptivityCounter": {
        "description": "Contains an indicator that is incremented over time or reset depending on the classification of a particle as L over time.",
        "type": "int32_t",
        "kind": "singleData",
        "unit": "none",
        "size": 16,
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "splitIndicatorCompacted": {
        "description": "Contains an indicator that is incremented over time or reset depending on the classification of a particle as L over time.",
        "type": "int32_t",
        "kind": "particleData",
        "unit": "none",
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "parentIndex": {
        "description": "Contains a unique identifier of the parent particle of a particle that was split particle.",
        "type": "int32_t",
        "kind": "particleData",
        "unit": "none",
        "size": 1,
        "swap": true,
        "resort": true,
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "parentVolume": {
        "description": "Contains the volume of the parent particle of a particle that was split.",
        "unit": "SI::volume",
        "type": "float",
        "kind": "particleData",
        "size": 1,
        "swap": true,
        "resort": true,
        "depends_all": [
          { "modules::adaptive": true }
        ]
      },
      "parentPosition": {
        "description": "Contains an estimated propagated position Contains the volume of the parent particle of a particle that was split.",
        "unit": "SI::m",
        "type": "float4",
        "kind": "particleData",
        "size": 1,
        "swap": true,
        "resort": true,
        "depends_all": [
          { "modules::adaptive": true }
        ]
      }
    }
  },
  "uniforms":{
    "modules":{
      "adaptive": {
        "name": "Used to enable/disable continuous adaptivity, requires surfaceDistance = true.",
        "type": "bool",
        "default": true
      }
    },
    "adaptive": {
      "adaptivityScaling": {
        "type": "float",
        "default": "1.f",
        "unit": "none",
        "const": false
      },
      "adaptivityThreshold": {
        "type": "float",
        "default": "1.0f",
        "unit": "none",
        "const": false
      },
      "adaptivityGamma": {
        "type": "float",
        "default": "0.1f",
        "unit": "none",
        "const": false
      },
      "resolution": {
        "name": "Target adaptivity ratio of volumes for the simulation. Useful value: 16.f.",
        "type": "float",
        "default": "32.f",
        "unit": "none",
        "const": false,
        "range": {
          "min": "1.f",
          "max": "512.f",
          "step": "1.f"
        }
      },
      "useVolume": {
        "name": ".",
        "type": "int32_t",
        "default": "1",
        "unit": "none"
      },
      "minVolume": {
        "name": ".",
        "type": "float",
        "default": "1.f",
        "unit": "SI::volume"
      },
      "detailedAdaptiveStatistics": {
        "name": ".",
        "type": "int32_t",
        "default": "1",
        "unit": "none",
        "range": {
          "min": 0,
          "max": 1,
          "step": 1
        }
      },
      "ratio": {
        "name": "Target adaptivity ratio of volumes for the simulation. Useful value: 16.f.",
        "type": "float",
        "default": "1.f",
        "unit": "none"
      },
      "blendSteps": {
        "name": "Timesteps that the simulation should blend split particles over. Useful value: 10.f.",
        "type": "float",
        "const": false,
        "unit": "none",
        "default": "10.f"
      },
      "delay": {
        "name": "Initial delay the simulation should wait before adjusting the resolution due to initial errors. Useful value: 1.f.",
        "type": "float",
        "const": false,
        "unit": "SI::s",
        "default": "1.f"
      },
      "splitPtcls": {
        "name": "Value that represents the number of particles split in the last splitting step.",
        "type": "std::vector<int32_t>",
        "unit": "none",
        "default": "0"
      },
      "blendedPtcls": {
        "name": "Value that represents the number of particles split in the last splitting step.",
        "type": "int32_t",
        "unit": "none",
        "default": "0"
      },
      "mergedPtcls": {
        "name": "Value that represents the number of particles merged in the last merge step.",
        "type": "std::vector<int32_t>",
        "unit": "none",
        "default": "0"
      },
      "sharedPtcls": {
        "name": "Value that represents the number of particles sharing in the last share step.",
        "type": "std::vector<int32_t>",
        "default": "0"
      }
